  "weeklyRotation": {
    "description": "One task per day. Optional but recommended. Does NOT affect streak.",
    "streakDepends": false,
    "schedule": {
      "Monday": {
        "task": "Read 1 paragraph from any French text aloud",
        "time": "10min",
        "type": "read",
        "sources": ["RFI article", "Clémence dialogue", "Any French book"]
      },
      "Tuesday": {
        "task": "Prep for friend session (if happening)",
        "time": "10min",
        "type": "write",
        "note": "If no friend session this week, write 5 sentences about your day instead."
      },
      "Wednesday": {
        "task": "Clémence lesson (any level)",
        "time": "20min",
        "type": "clemence",
        "url": "https://www.learnfrenchwithclemence.com"
      },
      "Thursday": {
        "task": "Write 5 simple sentences",
        "time": "10min",
        "type": "write"
      },
      "Friday": {
        "task": "Shadow 1 minute of this week's podcast",
        "time": "10min",
        "type": "speak"
      },
      "Saturday": {
        "task": "Extended listening (optional)",
        "time": "15min",
        "type": "listen"
      },
      "Sunday": {
        "task": "Rest / Catch-up / French exposure",
        "time": "flexible",
        "type": "flexible"
      }
    }
  },

