  "phases": [
    {
      "id": "phase1",
      "name": "Absorption Phase",
      "level": "A2",
      "months": "1-4",
      "description": "Focus: Input + consistency. Build the daily habit."
    },
    {
      "id": "phase2",
      "name": "Volume Phase",
      "level": "B1",
      "months": "5-8",
      "description": "Focus: Increase input volume. Transition to native content."
    },
    {
      "id": "phase3",
      "name": "Output Phase",
      "level": "B2",
      "months": "9-12",
      "description": "Focus: Active production. DELF B2 prep."
    }
  ],

  "streakRules": {
    "definition": "Completing ALL 4 dailyCore tasks = 1 streak day",
    "weeklyRotation": "Does NOT affect streak",
    "bonusTasks": "Does NOT affect streak"
